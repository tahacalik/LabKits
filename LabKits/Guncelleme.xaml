<Window x:Class="LabKits.Guncelleme"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabKits"
        mc:Ignorable="d"
        Title="Guncelleme" Height="382" Width="485" Background="{x:Null}" Foreground="Black" AllowsTransparency="True" WindowStyle="None" Loaded="Window_Loaded" WindowStartupLocation="CenterOwner">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="386*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="154"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Canvas Grid.Row="0" Margin="0,0,13,0" Panel.ZIndex="3" Grid.ColumnSpan="2">
            <Border Height="154" Width="472" CornerRadius="60,60,15,15">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF4CA8D3"/>
                        <GradientStop Color="#FF209889" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <Label Content="ARA" Canvas.Left="397" Canvas.Top="52" Background="{x:Null}" Foreground="White"/>
            <Label Content="SİL" Canvas.Left="406" Canvas.Top="82" Background="{x:Null}" Foreground="White" Width="24"/>
            <Label Content="GÜNCELLE" Canvas.Left="363" Canvas.Top="111" Background="{x:Null}" Foreground="White"/>
            <Label Content="Kit Güncelleme Ekranı" Canvas.Left="104" FontSize="20" FontFamily="Cambria" FontWeight="Bold" Background="{x:Null}" Foreground="White"/>
            <Label Content="Kit Adı:" FontSize="24" FontFamily="Cambria" FontWeight="Bold" Background="{x:Null}" Foreground="White" Canvas.Top="39"/>
            <Label Content="Lot:" Canvas.Left="40" FontSize="24" FontFamily="Cambria" FontWeight="Bold" Background="{x:Null}" Foreground="White" Canvas.Top="77"/>
            <Label Content="Adet:" Canvas.Left="24" FontSize="24" FontFamily="Cambria" FontWeight="Bold" Background="{x:Null}" Foreground="White" Canvas.Top="116"/>
            <Label Content="ID:" Canvas.Left="166" FontSize="24" FontFamily="Cambria" FontWeight="Bold" Background="{x:Null}" Foreground="White" Canvas.Top="116"/>
            <TextBox Canvas.Left="92" Canvas.Top="43" Width="239" x:Name="txt_KitAdi"  Text="{Binding SelectedItem.kitAdi, ElementName=dtg_GuncellemeListesi}" Height="30" FontSize="22" FontFamily="Cambria"/>
            <TextBox Canvas.Left="92" Canvas.Top="81" Width="239" x:Name="txt_KitLot" Text="{Binding SelectedItem.kitLot, ElementName=dtg_GuncellemeListesi}" Height="30" FontFamily="Cambria" FontSize="22"/>
            <TextBox Canvas.Left="92" Canvas.Top="120" Width="69" x:Name="txt_KitAdet" Text="{Binding SelectedItem.kitAdet, ElementName=dtg_GuncellemeListesi}" Height="30" FontFamily="Cambria" FontSize="22"/>
            <TextBox Canvas.Left="208" Canvas.Top="120" Width="37" x:Name="txt_KitId" Text="{Binding SelectedItem.kitId, ElementName=dtg_GuncellemeListesi}" Height="30" FontFamily="Cambria" FontSize="22" IsReadOnly="True"/>

            <Button Canvas.Left="417" Style="{DynamicResource AraButton}" x:Name="guncelleAra" Click="guncelleAra_Click" RenderTransformOrigin="0.5,0.5" Canvas.Top="40">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>

            <Button Canvas.Left="417" Style="{DynamicResource AraButton}" x:Name="guncelleSil" Click="guncelleSil_Click" RenderTransformOrigin="0.5,0.5" Canvas.Top="69">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>

            <Button Canvas.Left="417" Style="{DynamicResource GuncelleButton}" x:Name="guncelleGuncelle" Click="guncelleGuncelle_Click" RenderTransformOrigin="0.5,0.5" Canvas.Top="99">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>


            <Button Canvas.Left="417" Style="{DynamicResource YuvarlakButon2}" x:Name="guncellePencereKpt" Click="guncellePencereKpt_Click" RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>

        </Canvas>

        <Border Grid.Row="1" Margin="11,0,12,0">
            <DataGrid x:Name="dtg_GuncellemeListesi" ItemsSource="{Binding}" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF209998" IsReadOnly="True" RowHeight="30" CanUserAddRows="False" CanUserSortColumns="True" CanUserResizeColumns="False" CanUserResizeRows="False" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="Cambria" FontSize="20" FontWeight="Normal" HorizontalGridLinesBrush="#FF208998" VerticalGridLinesBrush="#FF208998" HeadersVisibility="Column" AutoGenerateColumns="False" Style="{DynamicResource GridTip1}" Height="228">
                <DataGrid.Columns>


                    <DataGridTextColumn Binding="{Binding Path=kitAdi}" IsReadOnly="True" Header="KİT ADI" MinWidth="170" >
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>

                        <DataGridTextColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="#209998"/>
                                <Setter Property="BorderThickness" Value="5,0,0,0"/>
                                <Setter Property="BorderBrush" Value="#FF063D3E"/>
                                <Setter Property="Foreground" Value="White"/>

                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="BorderThickness" Value="5,0,0,0"/>
                                        <Setter Property="BorderBrush" Value="#FF686868"/>
                                        <Setter Property="Foreground" Value="#FF063D3E"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.CellStyle>

                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding Path=kitLot}" IsReadOnly="True" Header="LOT" MinWidth="200" >
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>

                        <DataGridTextColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="#209998"/>
                                <Setter Property="BorderThickness" Value="5,0,0,0"/>
                                <Setter Property="BorderBrush" Value="#FF063D3E"/>
                                <Setter Property="Foreground" Value="White"/>

                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="BorderThickness" Value="5,0,0,0"/>
                                        <Setter Property="BorderBrush" Value="#FF686868"/>
                                        <Setter Property="Foreground" Value="#FF063D3E"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.CellStyle>

                    </DataGridTextColumn>

                    <DataGridTextColumn Binding="{Binding Path=kitAdet}" IsReadOnly="False" Header="STOK" MinWidth="25" >
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>

                        <DataGridTextColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="#209998"/>
                                <Setter Property="BorderThickness" Value="5,0,0,0"/>
                                <Setter Property="BorderBrush" Value="#FF063D3E"/>
                                <Setter Property="Foreground" Value="White"/>

                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="BorderThickness" Value="5,0,0,0"/>
                                        <Setter Property="BorderBrush" Value="#FF686868"/>
                                        <Setter Property="Foreground" Value="#FF063D3E"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.CellStyle>

                    </DataGridTextColumn>





                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
